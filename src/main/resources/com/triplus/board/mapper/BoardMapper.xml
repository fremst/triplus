<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.triplus.board.mapper.BoardMapper">
    <select id="select" resultType="com.triplus.dto.board.BoardDto">
		select * from board
	</select>
    <insert id="insert" parameterType="com.triplus.dto.board.BoardDto">
		insert into board values(board_seq.nextval, #{writerid}, #{title}, #{contents}, sysdate, #{hit}, #{published})
	</insert>
    <delete id="delete" parameterType="int">
		delete from board where brdnum = ${brdnum}
	</delete>
    <update id="update" parameterType="com.triplus.dto.board.BoardDto">
		update board
			set writerid = #{writerid}, title = ${title}, contents = ${contents}, timg = ${timg}, hit = ${hit}, published = ${published}
			where brdnum = #{brdnum}
	</update>
</mapper>